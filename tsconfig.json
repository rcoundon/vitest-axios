{
  "compilerOptions": {
    "plugins": [
      {
        "transform": "ts-optchain/transform"
      }
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "types": [
      "vitest/globals"
    ],
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "./.build",
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "skipLibCheck": true,
    "declarationMap": true,
    "declaration": true,
    "preserveConstEnums": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": [
        "main/*"
      ]
    }
  },
  "exclude": [
    "./vitest.config.js",
    "./node_modules/**/*",
    "./build/**/*"
  ],
  "include": [
    "src",
    "config",
    "./vitest.config.ts"
  ]
}